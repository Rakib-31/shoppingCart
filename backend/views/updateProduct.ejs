<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/./panel.css" type="text/css">
</head>
<body>
    <nav class=" border-box ">
        <div class="container">
        <div class="row navpad">
            <div class="col-6"><a href="/getallproducts" class="btn"><h5>Test Logo</h5></a></div>
            <div class="col-6 text-right ">User Name </div>
        </div>
        </div>
    </nav>
    <div class="sidebar">
        <div class="side-top-margin container">
            <button id="promotion">Promotions</button>
            <div id="mySidenav">
                <div class="mt-2"><a href="/promocode">Promo Codes</a></div>
                <div class="mt-2"><a href="/addnewpromo">Add Promo Codes</a></div>
            </div>
            <div id="main">
                <div class="mt-2"><a href="/order">Orders</a></div>
                <div class="mt-2"><a href="/getallproducts">Products</a></div>
            </div>
        </div>
    </div>
        
    <div class="content">
        <div class="form-position">
            <form  action="/updateProduct?_id=<%=productData._id%>" method="POST">
                <div class="image-upload text-center">
                        <label for="image">
                            <div class="image-input-box">
                                <div class="text-position">
                                    <<p>Upload</p>
                                    <p>Product Image</p>
                                    <p>Image size must be</p>
                                    <p>500*500</p>>
                                </div>
                            </div>
                        </label>
                    
                        <input readonly id="image" name="image" type="file"/>
                    </div>
                <div class="form-group">
                    <label for="product_name">Product Name</label>
                    <input class="form-control" type="text" value="<%=productData.product_name%>" name="product_name" id="product_name"/>
                </div>
                <div class="form-group">
                    <label for="product_price">Product Price (Before Discount)</label>
                    <input class="form-control" type="text" value="<%=productData.product_price%>" name="product_price" id="product_price"/>
                </div>
                <div class="form-group">
                    <label for="discount_rate">Discount Rate</label>
                    <input class="form-control" type="text" value="<%=productData.discount_rate%>" name="discount_rate" id="discount_rate"/>
                </div>
                <div class="form-group">
                    <label for="shipping_charge">Shipping Charge</label>
                    <input class="form-control" type="text" value="<%=productData.shipping_charge%>" name="shipping_charge" id="shipping_charge"/>
                </div>
                <div class="form-group">
                    <label for="color">Color</label>
                    <input class="form-control" type="text" value="<%=productData.color%>" name="color" id="color"/>
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <input class="form-control" type="text" value="<%=productData.size%>" name="size" id="size"/>
                </div>
                <% if(productData.active === "YES"){%>
                    <div class="container d-flex">
                        <label class="ml-4 mb-4" for="size">Active</label>
                        <div class="text-right mr-4 ml-auto">
                        <span style="color: blue;">YES<input class="ml-auto mr-1" type="checkbox" value="YES" name="active" id="active1" checked/></span>
                        <span style="color: red;">NO<input class="ml-auto mr-1" type="checkbox" value="NO" name="active" id="active2"/></span>
                        </div>
                    </div>
                <%} else {%>
                    <div class="container d-flex">
                        <label class="ml-4 mb-4" for="size">Active</label>
                        <div class="text-right mr-4 ml-auto">
                        <span style="color: blue;">YES<input class="ml-auto mr-1" type="checkbox" value="YES" name="active" id="active1"/></span>
                        <span style="color: red;">NO<input class="ml-auto mr-1" type="checkbox" value="NO" name="active" id="active2" checked/></span>
                        </div>
                    </div>
                <%}%>
                <div class="text-center">
                    <button class="btn" type="submit">Add Product</button>
                </div>
            </form>
        </div>
    </div>

    <script src="sidebarManage.js" type="text/javascript"></script>
    <script>
        let active1 = document.getElementById('active1');
        let active2 = document.getElementById('active2');
        active1.addEventListener('click', function(){
            active2.checked = active1.checked ? false : true;
        });

        active2.addEventListener('click', function(){
            active1.checked = active2.checked ? false : true;
        });
    </script>

</body>
</html>
